@model UpdateMessageDto

@{
    ViewData["Title"] = "Mesaj Detay Sayfası";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">@Html.DisplayFor(x=>x.Subject) Konulu Mesaj Detay Sayfası</h5><br />
                <table class="table table-striped table-hover tabel-border">
                    <tr>
                        <th>Gönderen Ad Soyad:</th>
                        <td>@Html.DisplayFor(x => x.Name)</td>
                    </tr>
                    <tr>
                        <th>Gönderen Mail Adresi:</th>
                        <td>@Html.DisplayFor(x => x.Email)</td>
                    </tr>
                    <tr>
                        <th>Gönderen Telefon Numarası:</th>
                        <td>@Html.DisplayFor(x => x.Phone)</td>
                    </tr>
                    <tr>
                        <th>Gönderen İp Adresi:</th>
                        <td>@Html.DisplayFor(x => x.IPAddress)</td>
                    </tr>
                    <tr>
                        <th>Mesaj Gönderim Tarihi:</th>
                        <td>@(((DateTime)Model.CreatedDate).ToString("dd MMMM yyyy"))</td>
                    </tr>
                    <tr>
                        <th>Gönderen Mesaj Konusu:</th>
                        <td>@Html.DisplayFor(x => x.Subject)</td>
                    </tr>
                    <tr>
                        <th>Gönderen Mesaj İçeriği:</th>
                        <td>@Html.DisplayFor(x => x.Description)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>