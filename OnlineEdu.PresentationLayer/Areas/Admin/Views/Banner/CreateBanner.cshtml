@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title m-b-0">Yeni Banner Alanı Girişi</h5>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group m-t-20">
                    <label>Başlık Alanı<small class="text-muted"></small></label>
                    <input type="text" class="form-control date-inputmask" id="date-mask" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group m-t-20">
                    <label>Banner Görseli<small class="text-muted"></small></label>
                    <input type="file" class="form-control date-inputmask" id="date-mask" name="Image">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
  
                <div class="form-group m-t-20">
                    <button class="btn btn-success btl-lg">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

