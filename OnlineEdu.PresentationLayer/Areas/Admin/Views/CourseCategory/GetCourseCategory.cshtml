@model UpdateCourseCategoryDto

@{
    ViewData["Title"] = "Kurs Kategorisi Güncelleme Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Kurs Kategorisi Güncelleme Sayfası</h5>
                <form method="post">
                    <div class="form-group m-t-20">
                        <input type="hidden" asp-for="CourseCategoryId">
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Kategori Adı <small class="text-muted"></small></label>
                        <input type="text" class="form-control date-inputmask" id="date-mask" placeholder="Lütfen Kurs Kategorisi Adınızı Giriniz" asp-for="CourseCategoryName">
                        <span asp-validation-for="CourseCategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Kategori İkonu <small class="text-muted"></small></label>
                        <input type="text" class="form-control date-inputmask" id="date-mask" placeholder="Lütfen Kurs Kategorisi İkonunu Giriniz" asp-for="Icon">
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Kurs Kategori Açıklaması <small class="text-muted"></small></label>
                        <textarea type="text" asp-for="Description" rows="10" class="form-control international-inputmask" placeholder="Lütfen Kurs Kategorisi Açıklamasını Giriniz"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Kurs Ana Sayfada Görünsün mü? <small class="text-muted"></small></label>
                        <input type="checkbox" id="date-mask" asp-for="ShowCase">
                        <span asp-validation-for="ShowCase" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-primary">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

