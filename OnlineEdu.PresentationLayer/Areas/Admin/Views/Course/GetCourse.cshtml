@model UpdateCourseDto

@{
    ViewData["Title"] = "Kurs Güncelleme Sayfası";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Kurs Güncelleme Sayfası</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group m-t-20">
                        <input type="hidden"   placeholder="Lütfen Kurs Adını Giriniz" asp-for="CourseId">
                        <input type="hidden"   placeholder="Lütfen Kurs Adını Giriniz" asp-for="ImageUrl">
                    </div>
                    <div class="form-group m-t-20">
                        <img src="~/Images/CourseImages/@Model.ImageUrl" style="width:830px;height:400px;border-radius:5px;" />
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Adı <small class="text-muted"></small></label>
                        <input type="text" class="form-control date-inputmask" id="date-mask" placeholder="Lütfen Kurs Adını Giriniz" asp-for="CourseName">
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Kategorisi <small class="text-muted"></small></label>
                        <select asp-items="@ViewBag.CourseCategoryList" asp-for="CourseCategoryId" class="form-control">
                            <option>Kategori Seçiniz</option>
                        </select>
                        <span asp-validation-for="CourseCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Kapak Resmi<small class="text-muted"></small></label>
                        <input type="file" class="form-control date-inputmask" id="date-mask" name="courseResim">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Fiyatı <small class="text-muted"></small></label>
                        <input type="number" class="form-control date-inputmask" id="date-mask" placeholder="Lütfen Kurs Fiyatını Giriniz" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Ana Sayfada Gösterilsin mi?<small class="text-muted"></small></label>
                        <input type="checkbox" id="date-mask" asp-for="ShowCase">
                    </div>
                    <div class="form-group m-t-20">
                        <label>Kurs Aktif / Pasif<small class="text-muted"></small></label>
                        <input type="checkbox" id="date-mask" asp-for="Status">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-primary">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

