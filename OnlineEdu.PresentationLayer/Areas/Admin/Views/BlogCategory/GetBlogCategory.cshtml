@model UpdateBlogCategoryDto

@{
    ViewData["Title"] = "GetBlogCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title m-b-0">Blog Kategori Güncelleme Alanı</h5>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group m-t-20">
                    <input type="hidden" class="form-control date-inputmask" asp-for="BlogCategoryId">                 
                </div>

                <div class="form-group m-t-20">
                    <label>Başlık Alanı<small class="text-muted"></small></label>
                    <input type="text" class="form-control date-inputmask" id="date-mask" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group m-t-20">
                    <button class="btn btn-success btl-lg">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>


