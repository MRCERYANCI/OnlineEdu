
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_UILayout/Layout.cshtml";
}

@await Component.InvokeAsync("_HomePageTitleAreaComponentPartial")

<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("_BlogGetAllBlogsComponentPartial")
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder='Aranacak Bloğu Giriniz...'
                                           onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'Aranacak Bloğu Giriniz...'">
                                    <div class="input-group-append">
                                        <button class="btns" type="button"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                    type="submit">
                                Ara
                            </button>
                        </form>
                    </aside>
                    @await Component.InvokeAsync("_BlogCategoryListComponentPartial")

                    @await Component.InvokeAsync("_BlogRecentBlogsComponentPartial")
                    <aside class="single_sidebar_widget tag_cloud_widget">
