@model List<ResultCourseCategoryDto>

<div class="categories-area section-padding30">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="cl-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle text-center mb-70">
                    <span>Popular Online Kurslar</span>
                    <h2>Popüler Kategorilere Göz Atın</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var CourseCategories in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-cat mb-50">
                        <div class="cat-icon">
                            <span class="@CourseCategories.Icon"></span>
                        </div>
                        <div class="cat-cap">
                            <h5><a href="/Course/GetCourseByCategory/@CourseCategories.CourseCategoryId">@CourseCategories.CourseCategoryName</a></h5>
                            <p>@CourseCategories.Description</p>
                            <a href="/Course/GetCourseByCategory/@CourseCategories.CourseCategoryId" class="read-more1">Kurslara Git ></a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="browse-btn2 text-center mt-50">
                    <a href="/Course/Index" class="btn">Daha Fazla Kurs Bul</a>
                </div>
            </div>
        </div>
    </div>
</div>
