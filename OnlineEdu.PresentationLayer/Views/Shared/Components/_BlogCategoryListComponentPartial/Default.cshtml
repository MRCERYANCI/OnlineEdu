@model List<ResultBlogCategoryWithCountDto>

<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title" style="color: #2d2d2d;">Kategoriler</h4>
    <ul class="list cat-list">
        @foreach (var BlogCategoryWithCount in Model)
        {
            <li>
                <a href="/Blog/BlogsByCategory/@BlogCategoryWithCount.CategoryId" class="d-flex">
                    <p>@BlogCategoryWithCount.CategoryName</p>
                    <p>(@BlogCategoryWithCount.Count)</p>
                </a>
            </li>
        }
    </ul>
</aside>