@model List<ResultTestimonialDto>

<div class="testimonial-area fix pt-180 pb-180 section-bg" data-background="/Vitrin%20Temaları/onlineedu-master/assets/img/gallery/section_bg03.png">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-9 col-md-9">
                <div class="h1-testimonial-active">

                    @foreach (var Testimonials in Model)
                    {
                        <div class="single-testimonial pt-65">
                            <div class="testimonial-icon mb-45">
                                <img src="~/Images/TestimonialImages/@Testimonials.ImageUrl" class="ani-btn" alt="@Testimonials.Name - @Testimonials.Title" style="width:100px;height:100px;border-radius:50%">
                            </div>

                            <div class="testimonial-caption text-center">
                                <p>@Testimonials.Comment</p>
                                <div class="testimonial-ratting">
                                    @for (int i = 0; i < Testimonials.Star; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                </div>
                                <div class="rattiong-caption">
                                    <span>@Testimonials.Name<span> - @Testimonials.Title</span> </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
