@model List<ResultBlogDto>

<div class="home-blog-area section-padding30">
    <div class="container">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center mb-50">
                    <span>Son Yazılan Bloglarımız</span>
                    <h2>Bloglara Göz Atın</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var Blogs in Model)
            {
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="home-blog-single mb-30">
                        <div class="blog-img-cap">
                            <div class="blog-img">
                                <img src="~/Images/BlogImages/@Blogs.ImageUrl" alt="@Blogs.Title" style="width:556px;height:324px;">
                                <!-- Blog date -->
                                <div class="blog-date text-center">
                                    <span>@(((DateTime)Blogs.CreatedDate).ToString("dd"))</span>
                                    <p>@(((DateTime)Blogs.CreatedDate).ToString("MMMM"))</p>
                                </div>
                            </div>
                            <div class="blog-cap">
                                <p>|   @Blogs.BlogCategory.Name</p>
                                <h3><a href="/Blog/BlogDetails/@Blogs.SefUrl">@Blogs.Title</a></h3>
                                <a href="/Blog/BlogDetails/@Blogs.SefUrl" class="more-btn">Devamını Oku »</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Blog Area End -->